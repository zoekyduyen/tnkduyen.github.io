    div(class='work margin-container-4')
        p(class='section-title no-alone-2') Education
        div(class='container')
            each edu in resume.education
                div(class='article margin-container-3')
                    div(class='header no-alone-1')
                        div(class='table')
                            div(class='left')
                                span(class='position')=edu.studyType + ' of ' + edu.area
                                span(class='company-location margin-text-1')
                                    a(href=edu.url)=edu.institution
                                    if edu.institution && edu.location
                                        | #{' Â· '}
                                    | #{edu.location}
                            div(class='right')
                                span(class='dates')=edu.startDate + ' - ' + edu.endDate
                    div(class='summary markdown')!=helper.mdToHtml(edu.summary)
                    if helper.validArray(edu.highlights)
                        ul(class='highlights no-break')
                            each highlight in edu.highlights
                                li=highlight
